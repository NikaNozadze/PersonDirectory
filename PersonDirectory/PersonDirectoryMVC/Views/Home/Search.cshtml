@model PersonDirectory.Model.ViewModels.HomeViewModel;

<style>
    .text-primary {
        color: white;
    }

    #button {
        font-size: 28px;
        font-weight: bold;
        width: 400px;
        height: 100px;
        margin: 5px;
        margin-left: 3%;
        background-color: rgba(4, 21, 51, 0.7);
        color: white;
        border: none;
        cursor: pointer;
        transition: background-color 0.3s;
        border-radius: 20px;
    }

        #button:hover {
            background-color: rgba(28, 28, 28);
            color: rgb(150, 139, 3);
        }

    #button1 {
        width: 400px;
        height: 50px;
        margin-top: 10px;
        margin-left: 30vh;
        background-color: rgba(4, 21, 51, 0.7);
        color: white;
        border: none;
        cursor: pointer;
        transition: background-color 0.3s;
        border-radius: 20px;
    }

        #button1:hover {
            background-color: rgba(28, 28, 28);
            color: rgb(150, 139, 3);
        }

    #searchButton {
        width: 100px;
        height: 50px;
        background-color: rgba(4, 21, 51, 0.7);
        color: white;
        border: none;
        cursor: pointer;
        transition: background-color 0.3s;
        border-radius: 20px;
    }

        #searchButton:hover {
            background-color: rgba(28, 28, 28);
            color: rgb(150, 139, 3);
        }

    #searchInput {
        width: 500px;
        height: 50px;
        background-color: rgba(28, 28, 28);
        color: rgb(150, 139, 3);
        font-weight: bold;
        border-radius: 20px;
        text-align: center;
    }

    #searchType {
        width: 200px;
        height: 50px;
        background-color: rgba(4, 21, 51, 0.7);
        margin-top: 10px;
        margin-left: 50px;
        color: white;
        border: none;
        cursor: pointer;
        transition: background-color 0.3s;
        border-radius: 20px;
        text-align: center;
    }

    h1, h2, h3, h4, h5, p {
        color: white;
    }

    .error-message {
        width: 600px;
        height: 70px;
        margin-left: 15vh;
        color: red;
        font-weight: bold;
        border: 2px solid red;
        padding: 10px;
        border-radius: 5px;
    }

    #persondiv {
        width: auto;
        height: auto;
        margin: 20px;
        margin-left: 120px;
        margin-right: 120px;
        color: white;
        border-radius: 20px;
        background-color: rgba(4, 21, 51, 0.7);
    }

    #persondivDetails {
        width: auto;
        height: auto;
        margin: 10px;
        color: white;
        border-radius: 20px;
        background-color: rgba(4, 21, 51, 0.7);
    }

    #personPicturediv {
        height: auto;
        width: auto;
        margin: 10px;
        background-color: rgba(4, 21, 51, 0.7);
        border-radius: 20px;
        margin-left: auto;
        margin-right: 60px;
    }

    #uploadedImage {
        width: auto;
        height: 250px;
    }

    #main_div {
        height: auto;
        width: 70%;
        margin-left: auto;
        margin-right: auto;
        background-color: rgba(38, 37, 38, 0.7);
    }

    #updateButton {
        height: 40px;
        width: 300px;
        margin-left: 28px;
        margin-right: 10px;
    }

    #deleteButton {
        height: 40px;
        width: 300px;
    }

    #updateCityButton {
        height: 40px;
        width: 200px;
    }

    #deleteCityButton {
        height: 40px;
        width: 200px;
    }

    #update_delete_citydiv {
        height: 40px;
        width: 450px;
        margin-top: 15px;
        margin-left: auto;
        margin-right: -20px;
    }

    #updatePhoneNumberButton {
        height: 40px;
        width: 300px;
    }

    #deletePhoneNumberButton {
        height: 40px;
        width: 300px;
    }

    #update_delete_PhoneNumberdiv {
        margin-left: 20px;
    }

    #phoneNumbersdivDetails {
        width: auto;
        height: auto;
        margin: 10px;
        margin-left: 30px;
        color: white;
        border-radius: 20px;
        background-color: rgba(4, 21, 51, 0.7);
    }

    .modal-body {
        color: black;
    }
</style>

<div class="row pb-2">
    <h2 style="font-size: 50px; font-weight: bold; color: #aba9a7;">@Model.Localizer["Search"]</h2>
    <hr style="margin-top: 10px;" />
</div>
<form id="languageForm" method="post" enctype="multipart/form-data">
    @if (!string.IsNullOrEmpty(@Model.ErrorMessage))
    {
        <div class="error-message">
            @Model.ErrorMessage
        </div>
    }

    <select asp-for="SearchType" id="searchType">
        <option value="0">@Model.Localizer["Person"]</option>
        <option value="1">@Model.Localizer["City"]</option>
        <option value="2">@Model.Localizer["PhoneNumber"]</option>
    </select>
    <input asp-for=SearchTerm type="text" id="searchInput" placeholder="@Model.Localizer["Enter your search query"]">
    <button type="submit" id="searchButton">@Model.Localizer["Search"]</button>
    <div style="margin-top: 20px; height: 10px; width: 10px"></div>

    @if (Model.SearchedPersons != null)
    {
        foreach (var person in Model.SearchedPersons)
        {
            <div id="persondiv" class="row">
                <div id="persondivDetails">
                    <div>
                        <label>@Model.Localizer["Id"]: @person.Id</label>
                    </div>
                    <div>
                        <label>@Model.Localizer["FirstName"]: @person.FirstName</label>
                    </div>
                    <div>
                        <label>@Model.Localizer["LastName"]: @person.LastName</label>
                    </div>
                    <div>
                        <label>@Model.Localizer["Gender"]: @person.Gender</label>
                    </div>
                    <div>
                        <label>@Model.Localizer["PersonalNumber"]: @person.PersonalNumber</label>
                    </div>
                    <div>
                        <label>@Model.Localizer["DateOfBirth"]: @person.DateOfBirth</label>
                    </div>
                    <div>
                        <label>@Model.Localizer["CityId"]: @person.City.Id</label>
                    </div>
                    <div>
                        <label>@Model.Localizer["CityName"]: @person.City.Name</label>
                    </div>
                    @foreach (var phoneNumber in person.PhoneNumbers)
                    {
                        <div>
                            <label>@phoneNumber.Type @Model.Localizer["Number"]: @phoneNumber.Number</label>
                        </div>
                    }
                    @foreach (var relatedPerson in person.RelatedPeople)
                    {
                        <div>
                            <label>@Model.Localizer["RP Id/FN"]: @relatedPerson.RelatedPersonId @relatedPerson.RelatedPerson.FirstName @relatedPerson.RelatedPerson.LastName</label>
                        </div>
                    }
                </div>
                <div id="personPicturediv" class="col-md-8">
                    @if (string.IsNullOrEmpty(person.ImagePath))
                    {
                        <img style="width:auto; height:300px" src="@Url.Content("~/images/NoPersonImage.png")" class="card-img-top" alt="...">
                    }
                    else
                    {
                        <img id="uploadedImage" src="/images/@person.ImagePath" class="card-img-top" alt="...">
                    }
                </div>

                <a asp-controller="Person" asp-action="UpdatePerson" asp-route-id="@person.Id" id="updateButton" class="btn btn-primary" style="margin-bottom: 10px">@Model.Localizer["Update"]</a>
                <button id="deleteButton" type="button" class="btn btn-danger" style="margin-bottom: 10px" data-bs-toggle="modal" data-bs-target="#deleteConfirmationModal-@person.Id">@Model.Localizer["Delete"]</button>
                
                <div class="modal fade" id="deleteConfirmationModal-@person.Id" tabindex="-1" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="deleteConfirmationModalLabel">@Model.Localizer["Confirm Deletion"]</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                @Model.Localizer["Are you sure you want to delete person with ID"]: @person.Id?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@Model.Localizer["Cancel"]</button>
                                <a asp-controller="Person" asp-action="DeletePerson" asp-route-id="@person.Id" class="btn btn-danger">@Model.Localizer["Delete"]</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else if (Model.SearchedCities != null)
    {
        foreach (var city in Model.SearchedCities)
        {
            <div id="persondiv" class="row">
                <div id="persondivDetails">
                    <div>
                        <label>@Model.Localizer["Id"]: @city.Id</label>
                    </div>
                    <div>
                        <label>@Model.Localizer["Name"]: @city.Name</label>
                    </div>
                </div>

                <div id="update_delete_citydiv">
                    <a asp-controller="City" asp-action="UpdateCity" asp-route-id="@city.Id" id="updateCityButton" class="btn btn-primary" style="margin-bottom: 10px">@Model.Localizer["Update"]</a>
                    <button id="deleteCityButton" type="button" class="btn btn-danger" style="margin-bottom: 10px" data-bs-toggle="modal" data-bs-target="#deleteConfirmationModal-@city.Id">@Model.Localizer["Delete"]</button>
                </div>
                
                <div class="modal fade" id="deleteConfirmationModal-@city.Id" tabindex="-1" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="deleteConfirmationModalLabel">@Model.Localizer["Confirm Deletion"]</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                @Model.Localizer["Are you sure you want to delete City with ID"]: @city.Id?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@Model.Localizer["Cancel"]</button>
                                <a asp-controller="City" asp-action="DeleteCity" asp-route-id="@city.Id" class="btn btn-danger">@Model.Localizer["Delete"]</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else if (Model.SearchedPhoneNumbers != null)
    {
        foreach (var phoneNumber in Model.SearchedPhoneNumbers)
        {
            <div id="persondiv" class="row">
                <div id="phoneNumbersdivDetails">
                    <div>
                        <label>@Model.Localizer["Id"]: @phoneNumber.Id</label>
                    </div>
                    <div>
                        <label>@Model.Localizer["Person Id"]: @phoneNumber.PersonId</label>
                    </div>
                    <div>
                        <label>@Model.Localizer["Person Name"]: @phoneNumber.Person.FirstName @phoneNumber.Person.LastName</label>
                    </div>
                    <div>
                        <label>@Model.Localizer["Number"]: @phoneNumber.Number</label>
                    </div>
                    <div>
                        <label>@Model.Localizer["Phone Type"]: @phoneNumber.Type</label>
                    </div>
                </div>

                <div id="update_delete_PhoneNumberdiv">
                    <a asp-controller="PhoneNumber" asp-action="UpdatePhoneNumber" asp-route-id="@phoneNumber.Id" id="updatePhoneNumberButton" class="btn btn-primary" style="margin-bottom: 10px">@Model.Localizer["Update"]</a>
                    <button id="deletePhoneNumberButton" type="button" class="btn btn-danger" style="margin-bottom: 10px" data-bs-toggle="modal" data-bs-target="#deleteConfirmationModal-@phoneNumber.Id">@Model.Localizer["Delete"]</button>
                </div>

                <div class="modal fade" id="deleteConfirmationModal-@phoneNumber.Id" tabindex="-1" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="deleteConfirmationModalLabel">@Model.Localizer["Confirm Deletion"]</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                @Model.Localizer["Are you sure you want to delete Phone Number with ID"]: @phoneNumber.Id?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@Model.Localizer["Cancel"]</button>
                                <a asp-controller="PhoneNumber" asp-action="DeletePhoneNumber" asp-route-id="@phoneNumber.Id" class="btn btn-danger">@Model.Localizer["Delete"]</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    
    <div style="margin-top: 20px; height: 10px; width: 10px"></div>
</form>